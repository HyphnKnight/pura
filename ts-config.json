{
  "compilerOptions": {
    "diagnostics": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "rootDir": "src",
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "esnext",
    "outDir": "./dist"
  },
  "exclude": [
    "./tests/**/*.ts"
  ]
}