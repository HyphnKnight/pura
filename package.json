{
  "name": "pura",
  "version": "0.0.14",
  "description": "functional utilities collection",
  "scripts": {
    "deploy": "node deploy.js",
    "compile:src": "rm -rf ./dist && tsc -p ./ts-config.json",
    "ts-node": "TS_NODE_COMPILER_OPTIONS=\"{\\\"module\\\":\\\"commonjs\\\"}\" ts-node",
    "test:unit": "npm run ts-node ./tests/index.ts",
    "test:browser": "npm run compile:src && rollup -c",
    "lint:src": "tslint -p ts-config.json -c ./tslint.json ./src/**/*.ts",
    "lint:tests": "tslint -p ts-config-base.json -c ./tslint.json ./tests/*.ts",
    "lint:all": "npm run lint:tests && npm run lint:src",
    "lint:src:fix": "npm run lint:src -- --fix",
    "lint:tests:fix": "npm run lint:tests -- --fix",
    "lint:all:fix": "npm run lint:tests:fix && npm run lint:src:fix"
  },
  "author": "Rafe Lepre",
  "license": "MIT",
  "devDependencies": {
    "rollup": "^2.2.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.8.3"
  }
}
